<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">


    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="ID"
        android:id="@+id/edit_signup_id"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="PW"
        android:inputType="textPassword"
        android:id="@+id/edit_signup_pw"/>
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="NAME"
        android:id="@+id/edit_signup_name"/>
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="NICKNAME"
        android:id="@+id/edit_signup_nickname"/>
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="MAJOR"
        android:id="@+id/edit_signup_major"/>
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="PHONE"
        android:id="@+id/edit_signup_phone"/>

    <Button
        android:layout_marginTop="40dp"
        android:layout_width="100dp"
        android:layout_height="37dp"
        android:background="@drawable/roundbutton"
        android:text="SIGNUP"
        android:id="@+id/btn_signup_ok"/>

</LinearLayout>